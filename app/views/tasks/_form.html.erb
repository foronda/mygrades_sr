		<%= f.label :Category %>
    <%= f.collection_select :category_id, Category.all, :id, :name, :prompt => "Select a Course" %><br />
  </div>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %><br />
  </div>
  <div class="field">
    <%= f.label :total %>
    <%= f.number_field :total %><br />
  </div>
  <div class="field">
    <%= f.label :due_date %>
    <%= f.datetime_select :due_date %><br />
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
