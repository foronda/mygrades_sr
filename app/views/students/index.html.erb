
<h1>Listing students</h1>
<div class="accordion" id="accordion2">
  <div class="accordion-group">
	<table class="table table-hover">
		<tr class="success">
			<th>Course</th>
			<th>Username</th>
			<th>			
				<div>
					<a data-toggle="modal" data-target="#homework">
						Homework
					</a>
				</div>
			</th>
			<th>Lab Total </th>
			<th>Midterm Total </th>
			<th>Course Total </th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	<% @students.each do |student| %>
		<tr class="success">
			<td><%= Course.find(student.course).name %></td>
			<td><%= student.username %></td>
			<%= calc_homeworks(student.id) %>
			<%= session[:h_earned] %>
			<%= calc_labs(student.id) %>
			<%= calc_midterms(student.id) %>
			<%= calc_course(student.id) %>
			<td><%= link_to 'Show', student %></td>
			<td><%= link_to 'Edit', edit_student_path(student) %></td>
			<td><%= link_to 'Destroy', student, confirm: 'Are you sure?', method: :delete %></td>
		</tr>
	<% end %>
	</table>
<br />
		</div>
	</div>
<button class="btn btn-primary"><%= link_to 'New Student', new_student_path %></button>
