      </ul>
    </div>
  <% end %>

  <div class="field">
	  <%= f.label :Course %>
		<%= f.collection_select :course_id, Course.all, :id, :name, :prompt => "Select a Course" %>
  </div>
  
  <div class="field">
	  <%= f.label :Team %>
		<%= f.collection_select :team_id, Team.all, :id, :name, :prompt => "Select a Team" %>
  </div>
  
  
  
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
